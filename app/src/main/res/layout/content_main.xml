<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bingerdranch.android.foodrecom.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <ScrollView
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/label"
                android:text="FoodRecom"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#a8fffb"
                android:layout_width="368dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/norma_calloriy"
                android:text="Суточная норма"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/norma"
                android:text="0"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/container"
                    android:background="@drawable/shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:gravity="center"
                            android:visibility="visible">

                            <LinearLayout android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewZavtrak"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Завтрак"
                                        android:textColor="#ffffff"
                                        android:textSize="20sp"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/image_zavtrak_add"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:src="@drawable/add" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/textViewZavtrak_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Вы должны употребить "
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:id="@+id/text_view_numCalloriesZavtrak"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=""
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=" ккал"
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:gravity="center"
                            android:visibility="visible">

                            <LinearLayout android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewObed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Обед"
                                        android:textColor="#ffffff"
                                        android:textSize="20sp"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/image_obed_add"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:src="@drawable/add" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/textViewObed_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Вы должны употребить "
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:id="@+id/text_view_numCalloriesObed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=""
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=" ккал"
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:gravity="center"
                            android:visibility="visible">
                            <LinearLayout android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewUzin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Ужин"
                                        android:textColor="#ffffff"
                                        android:textSize="20sp"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/image_uzin_add"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:src="@drawable/add" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Вы должны употребить "
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:id="@+id/text_view_numCalloriesUzin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=""
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=" ккал"
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>
                        <TextView
                            android:id="@+id/water_norma"
                            tools:text="Норма воды"
                            android:layout_margin="10sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TableRow>
                            <TextView
                                android:id="@+id/text_recomendation"
                                android:layout_marginTop="20sp"
                                android:layout_weight="1"
                                android:text="@string/text_label"
                                android:textAlignment="center"
                                android:textColor="#03f7e7" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
