<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bingerdranch.android.foodrecom">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_fine_food"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_fine_food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Grafic_pitania"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Holodilnik"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Chto_Poest" />
        <activity
            android:name=".Settings"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".DialogAddition"
            android:theme="@style/Base.V7.Theme.AppCompat.Dialog">

        </activity>
    </application>

</manifest>